extends layout

block content
  div.container-fluid(ng-controller="GraphDataController")
    div.row-fluid
      div.span12.tile
        div.tileHead 
          div.type
            i.icon-signal
          |Bid/Ask Real Time 
          div.options
            div.option
              i.icon-cog       
        canvas#myChart(width=1170, height=350, id="myChart")
    div.row-fluid
      script(type='text/javascript', src='/javascripts/showHideController.js')
      div.row-fluid      
        div.span6.tile
          table.table.table-striped
            caption
              p Buying
            thead
              tr.buying
                th Bid
                th Size
                th Sum
                th Expiry
            tbody
              tr(ng-repeat="order in orders.orders", ng-show="order.side =='Buy'")
                td {{order.created | date:'HH:mm:ss'}}
                td {{order.price}}
                td {{order.quantity}}
                td {{order.expiry | date: 'MM:HH:mm:ss'}}
        div.span6.tile
          table.table.table-striped
            caption
              p Selling
            thead
              tr
                th Ask
                th Size
                th Sum
                th Expiry
            tbody.selling
              tr(ng-repeat="order in orders.orders", ng-show="order.side=='Sell'")
                td {{order.created | date:'HH:mm:ss'}}
                td {{order.price}}
                td {{order.quantity}}
                td {{order.expiry | date: 'MM:HH:mm:ss'}}
      div.row-fluid
        div.span6.tile
          div.tileHead 
            div.type
              i.icon-signal
            |Bid/Ask Real Time 
            div.options
              div.option
                i.icon-cog
          table.table.table-striped
            thead 
              tr
                th Time
                th Price
                th Volume
                th Expiry
                th Side
            tbody 
              tr(ng-repeat="order in orders.orders")
                td {{order.created | date:'HH:MM:ss'}}
                td {{order.price}}
                td {{order.quantity}}
                td {{order.expiry | date:'HH:MM:ss'}}
                td {{order.side}}
        div.span3.tile
          div.tileHead 
            div.type
             i.icon-info-sign
            | Mt. Gox Spot- Ask
            div.options
              div.option
                i.icon-cog
          div.tileData(ng-class="askColor") 
            canvas(width=40, height=40, id="arrow");
            | {{mtgox.lastBBO.ask | currency}}
        div.span3.tile
          div.tileHead 
            div.type
              i.icon-info-sign
            | Mt. Gox Spot- Bid
            div.options
              div.option
                i.icon-cog
          div.tileData(ng-class="bidColor") 
            canvas(width=40, height=40, id="arrow2");
            | {{mtgox.lastBBO.bid | currency }}
        div.span3.tile
          div.titleHead UpDown
          div.tileData {{askUpDown}}, {{bidUpDown}}
        