extends layout

block content
  div.container-fluid(ng-controller="GraphDataController")
    div.row-fluid
      div.span12
        p.tileHead Bid/Ask Real Time  
        canvas#myChart(width=1170, height=350, id="myChart")
    div.row-fluid
      script(type='text/javascript', src='/javascripts/showHideController.js')
      div.row-fluid      
        div.span6
          table.table.table-striped
            caption
              p Buying
            thead
              tr
                th Bid
                th Size
                th Sum
                th Expiry
            tbody
              tr(ng-repeat="order in orders.orders")
                td {{order.created | date:'HH:mm:ss'}}
                td {{order.price}}
                td {{order.quantity}}
                td {{order.expiry | date: 'MM:HH:mm:ss'}}
        div.span6
          table.table.table-striped
            caption
              p Selling
            thead
              tr
                th Ask
                th Size
                th Sum
                th Expiry
            tbody
              tr(ng-repeat="order in orders.orders")
                td {{order.created | date:'HH:mm:ss'}}
                td {{order.price}}
                td {{order.quantity}}
                td {{order.expiry | date: 'MM:HH:mm:ss'}}
      div.row-fluid
        div.span6
          table.table.table-striped
            caption 
              p Time and Sales
            thead 
              tr
                th Time
                th Price
                th Volume
                th Expiry
                th Side
            tbody 
              tr(ng-repeat="order in orders.orders")
                td {{order.created | date:'HH:MM:ss'}}
                td {{order.price}}
                td {{order.quantity}}
                td {{order.expiry | date:'HH:MM:ss'}}
                td {{order.side}}
        div.span3
          div.tileHead Mt. Gox Spot- Ask
          div.tileData {{mtgox.lastBBO.ask}}
        div.span3
          div.tileHead Mt. Gox Spot- Bid
          div.tileData {{mtgox.lastBBO.bid}}
        div.span3
          div.titleHead UpDown
          div.tileData {{upDown}}
        